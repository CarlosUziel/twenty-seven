# Example .env.dist file for The Council of the Twenty-Seven
# Copy this file to .env and fill in the actual values as needed

# LM Studio API endpoint
# LM_STUDIO_ENDPOINT=http://localhost:1234/v1

# Directory containing philosophical perspective summaries
PERSPECTIVES_DIR=.data/how_to_live__sivers/summaries

# Maximum number of words for a generated answer
MAX_WORDS_ANSWER=512

# Maximum number of words for a generated conclusion
MAX_WORDS_CONCLUSION=256

# Comma-separated list of available LLM model names
AVAILABLE_MODELS=deepseek/deepseek-r1-0528-qwen3-8b,mistralai/mistral-small-3.2,mistralai/magistral-small

# Frontend ports
FRONTEND_HOST_PORT=3000
FRONTEND_CONTAINER_PORT=3000

# Backend ports
BACKEND_HOST_PORT=8000
BACKEND_CONTAINER_PORT=8000

# External API keys
HUGGINGFACE_API_KEY=
OPENROUTER_API_KEY=

# External models
HUGGINGFACE_MODELS=deepseek-ai/DeepSeek-R1-0528-Qwen3-8B,Qwen/Qwen3-8B
OPENROUTER_MODELS=deepseek-ai/DeepSeek-R1-0528-Qwen3-8B,Qwen/Qwen3-8B
